    if (method === 'crypto') {
        initCryptoPayment();
    }
}

function initCryptoPayment() {
    const cryptoOptions = document.querySelectorAll('.crypto-option');
    const addressBox = document.getElementById('crypto-address');
    const copyBtn = document.querySelector('.copy-address');
    
    if (!cryptoOptions.length  !addressBox  !copyBtn) return;
    
    const addresses = {
        btc: '3J98t1WpEZ73CNmQviecrnyiWrnqRhWNLy',
        eth: '0x71C7656EC7ab88b098defB751B7401B5f6d8976F',
        usdt: 'TXmzM8gxHpMk5C5vXhJ5YKh6R7mLpNqP6L'
    };
    
    cryptoOptions.forEach(option => {
        option.addEventListener('click', function() {
            cryptoOptions.forEach(o => o.classList.remove('active'));
            this.classList.add('active');
            
            const crypto = this.dataset.crypto;
            addressBox.textContent = addresses[crypto] || addresses.btc;
        });
    });
    
    copyBtn.addEventListener('click', function() {
        navigator.clipboard.writeText(addressBox.textContent)
            .then(() => {
                const originalText = this.innerHTML;
                this.innerHTML = '<i class="fas fa-check"></i> –°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!';
                setTimeout(() => {
                    this.innerHTML = originalText;
                }, 2000);
            })
            .catch(err => {
                console.error('Copy failed:', err);
            });
    });
}

function validateStep3() {
    const activeMethod = document.querySelector('.payment-method.active');
    if (!activeMethod) {
        showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Å–ø–æ—Å–æ–± –æ–ø–ª–∞—Ç—ã', 'error');
        return false;
    }
    
    return true;
}

async function processOrder() {
    // –°–æ–±–∏—Ä–∞–µ–º –¥–∞–Ω–Ω—ã–µ –∑–∞–∫–∞–∑–∞
    const bouquet = JSON.parse(sessionStorage.getItem('selectedBouquet'));
    const deliveryData = JSON.parse(sessionStorage.getItem('deliveryData') || '{}');
    const activeMethod = document.querySelector('.payment-method.active');
    
    const orderData = {
        bouquet_id: bouquet.id,
        customer_name: deliveryData['customer-name'],
        customer_phone: deliveryData['customer-phone'],
        delivery_address: deliveryData['delivery-address'],
        delivery_zone: deliveryData['delivery-zone'],
        delivery_time: deliveryData['delivery-date'] + ' ' + deliveryData['delivery-time'],
        notes: deliveryData['order-notes'],
        total_price: parseFloat(sessionStorage.getItem('orderTotal') || '0'),
        payment_method: activeMethod?.dataset.method || 'cash',
        source: 'website'
    };
    
    try {
        // –°–æ–∑–¥–∞–µ–º –∑–∞–∫–∞–∑ —á–µ—Ä–µ–∑ API
        const response = await flowersAPI.createOrder(orderData);
        
        if (response.success) {
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –Ω–æ–º–µ—Ä –∑–∞–∫–∞–∑–∞
            sessionStorage.setItem('lastOrderId', response.data.order_id);
            sessionStorage.setItem('lastOrderNumber', response.data.order_number);
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É—Å–ø–µ—Ö
            showOrderSuccess(response.data);
            
            // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –∫ —à–∞–≥—É 4
            goToStep(4);
            
            // –û—á–∏—â–∞–µ–º –∫–æ—Ä–∑–∏–Ω—É –∏ –≤—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
            CartStorage.clearCart();
            sessionStorage.removeItem('selectedBouquet');
            sessionStorage.removeItem('deliveryData');
        } else {
            throw new Error(response.error || 'Order creation failed');
        }
    } catch (error) {
        throw error;
    }
}

function showOrderSuccess(orderData) {
    const detailsDiv = document.getElementById('order-details');
    if (!detailsDiv) return;
    
    detailsDiv.innerHTML = 
        <div class="success-details">
            <div class="detail-row">
                <span>–ù–æ–º–µ—Ä –∑–∞–∫–∞–∑–∞:</span>
                <strong>${orderData.order_number}</strong>
            </div>
            <div class="detail-row">
                <span>–°—É–º–º–∞:</span>
                <strong>${flowersAPI.formatPrice(orderData.total_price)}</strong>
            </div>
            <div class="detail-row">
                <span>–°–ø–æ—Å–æ–± –æ–ø–ª–∞—Ç—ã:</span>
                <strong>${getPaymentMethodName(orderData.payment_method)}</strong>
            </div>
            <div class="detail-row">
                <span>–°—Ç–∞—Ç—É—Å:</span>
                <span class="status-pending">–û–∂–∏–¥–∞–µ—Ç –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è</span>
            </div>
            <div class="delivery-estimate">
                <i class="fas fa-clock"></i>
                <span>–ü—Ä–∏–º–µ—Ä–Ω–æ–µ –≤—Ä–µ–º—è –¥–æ—Å—Ç–∞–≤–∫–∏: 45-60 –º–∏–Ω—É—Ç</span>
            </div>
        </div>
    ;
}

function getPaymentMethodName(method) {
    const names = {
        card: '–ë–∞–Ω–∫–æ–≤—Å–∫–∞—è –∫–∞—Ä—Ç–∞',
        revolut: 'Revolut',
        bank: '–ë–∞–Ω–∫–æ–≤—Å–∫–∏–π –ø–µ—Ä–µ–≤–æ–¥',
        crypto: '–ö—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç–∞',
        cash: '–ù–∞–ª–∏—á–Ω—ã–µ –∫—É—Ä—å–µ—Ä—É'
    };
    return names[method] || method;
}

function showNotification(message, type = 'info') {
    // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ—É–Ω–∫—Ü–∏—é –∏–∑ script.js –∏–ª–∏ —Å–æ–∑–¥–∞–µ–º —Å–≤–æ—é
    if (typeof window.showNotification === 'function') {
        window.showNotification(message, type);
    } else {
        alert(message);
    }
}

8. –î–µ–ø–ª–æ–π —Å–∞–π—Ç–∞

–ü—Ä–æ—Å—Ç–æ–π —Å–ø–æ—Å–æ–±: GitHub Pages

1. –°–æ–∑–¥–∞–π—Ç–µ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏–π –Ω–∞ GitHub
2. –ó–∞–≥—Ä—É–∑–∏—Ç–µ –≤—Å–µ —Ñ–∞–π–ª—ã —Å–∞–π—Ç–∞
3. –í –Ω–∞—Å—Ç—Ä–æ–π–∫–∞—Ö —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏—è –≤–∫–ª—é—á–∏—Ç–µ GitHub Pages
4. –°–∞–π—Ç –±—É–¥–µ—Ç –¥–æ—Å—Ç—É–ø–µ–Ω –ø–æ –∞–¥—Ä–µ—Å—É: https://username.github.io/the-flowers

–°–ø–æ—Å–æ–± –¥–ª—è –ø—Ä–æ–¥–≤–∏–Ω—É—Ç—ã—Ö: Netlify/Vercel

