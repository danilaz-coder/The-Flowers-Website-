                <div class="alert error">
                    <i class="fas fa-exclamation-triangle"></i>
                    <p>–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–∏—Å–∫–µ –±—É–∫–µ—Ç–æ–≤. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞.</p>
                </div>
            ;
        } finally {
            findBtn.disabled = false;
            findBtn.innerHTML = '<i class="fas fa-search"></i> –ù–∞–π—Ç–∏ –±—É–∫–µ—Ç—ã';
        }
    });
}

// –î–∞—à–±–æ—Ä–¥
function initDashboard() {
    const openBtn = document.getElementById('open-dashboard');
    const modal = document.getElementById('dashboard-modal');
    const closeBtn = modal.querySelector('.close-modal');
    const loginBtn = document.getElementById('login-dashboard');
    const passwordInput = document.getElementById('admin-password');


if (!openBtn) return;
    
    openBtn.addEventListener('click', () => {
        modal.classList.remove('hidden');
    });
    
    closeBtn.addEventListener('click', () => {
        modal.classList.add('hidden');
    });
    
    modal.addEventListener('click', (e) => {
        if (e.target === modal) {
            modal.classList.add('hidden');
        }
    });
    
    // –ê–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—è
    loginBtn.addEventListener('click', async () => {
        const password = passwordInput.value;
        
        if (password === 'admin123') { // –ó–∞–º–µ–Ω–∏—Ç—å –Ω–∞ —Ä–µ–∞–ª—å–Ω—É—é –ø—Ä–æ–≤–µ—Ä–∫—É
            document.getElementById('dashboard-auth').classList.add('hidden');
            document.getElementById('dashboard-content').classList.remove('hidden');
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –¥–∞—à–±–æ—Ä–¥–∞
            await loadDashboardData();
        } else {
            alert('–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å');
        }
    });
}

async function loadDashboardData() {
    const content = document.getElementById('dashboard-content');
    content.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞—à–±–æ—Ä–¥–∞...</div>';
    
    try {
        const response = await fetch(${API_CONFIG.baseUrl}${API_CONFIG.endpoints.dashboard}?period=today);
        const data = await response.json();
        
        if (data.success) {
            const report = data.data;
            content.innerHTML = 
                <div class="dashboard-grid">
                    <div class="metric-card">
                        <h4>üí∞ –°–µ–≥–æ–¥–Ω—è</h4>
                        <div class="metric-value">${report.metrics?.total_income || 0} –ª–≤</div>
                        <p>–î–æ—Ö–æ–¥</p>
                    </div>
                    <div class="metric-card">
                        <h4>üõí –ó–∞–∫–∞–∑—ã</h4>
                        <div class="metric-value">${report.metrics?.total_orders || 0}</div>
                        <p>–°–µ–≥–æ–¥–Ω—è</p>
                    </div>
                    <div class="metric-card">
                        <h4>üì¶ –î–æ—Å—Ç–∞–≤–∫–∏</h4>
                        <div class="metric-value" id="active-deliveries">0</div>
                        <p>–ê–∫—Ç–∏–≤–Ω—ã–µ</p>
                    </div>
                    <div class="metric-card">
                        <h4>üéØ –¶–µ–ª—å</h4>
                        <div class="metric-value">${report.metrics?.target || '500'} –ª–≤</div>
                        <p>–ù–∞ —Å–µ–≥–æ–¥–Ω—è</p>
                    </div>
                </div>
                <div class="dashboard-section">
                    <h4>üìä –ü–æ—Å–ª–µ–¥–Ω–∏–µ –∑–∞–∫–∞–∑—ã</h4>
                    <div id="recent-orders" class="orders-list"></div>
                </div>
                <div class="dashboard-actions">
                    <button class="btn btn-primary" id="export-report">
                        <i class="fas fa-download"></i> –≠–∫—Å–ø–æ—Ä—Ç –æ—Ç—á–µ—Ç–∞
                    </button>
                    <button class="btn btn-secondary" id="refresh-dashboard">
                        <i class="fas fa-sync-alt"></i> –û–±–Ω–æ–≤–∏—Ç—å
                    </button>
                </div>
            ;
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
            loadActiveDeliveries();
            loadRecentOrders();
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫
            document.getElementById('refresh-dashboard').addEventListener('click', loadDashboardData);
            document.getElementById('export-report').addEventListener('click', exportReport);
        }
    } catch (error) {
        content.innerHTML = '<div class="alert error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞—à–±–æ—Ä–¥–∞</div>';
    }
}

async function loadActiveDeliveries() {
    try {
        const response = await fetch(${API_CONFIG.baseUrl}${API_CONFIG.endpoints.logistics});
        const data = await response.json();
        
        if (data.length > 0) {
            document.getElementById('active-deliveries').textContent = data.length;
        }
    } catch (error) {
        console.error('Error loading deliveries:', error);
    }
}

async function loadRecentOrders() {
    // –ó–¥–µ—Å—å –±—É–¥–µ—Ç –∑–∞–≥—Ä—É–∑–∫–∞ –ø–æ—Å–ª–µ–¥–Ω–∏—Ö –∑–∞–∫–∞–∑–æ–≤
}

Daniel üåç Kanay üåêQA, [03/02/2026 18:10]
async function exportReport() {
    try {
        const response = await fetch(${API_CONFIG.baseUrl}${API_CONFIG.endpoints.dashboard}?period=today&format=csv);
        const blob = await response.blob();
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = dashboard_${new Date().toISOString().split('T')[0]}.csv;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
    } catch (error) {
        console.error('Export error:', error);
    }
}

// –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞
function smoothScroll() {
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            if (targetId === '#') return;
            
            const targetElement = document.querySelector(targetId);
            if (targetElement) {
                window.scrollTo({
                    top: targetElement.offsetTop - 100,
                    behavior: 'smooth'
                });
            }
        });
    });
}

// –£—Ç–∏–ª–∏—Ç—ã
function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = notification ${type};
    notification.innerHTML = 
        <i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'}"></i>
        <span>${message}</span>
    ;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.classList.add('show');
    }, 10);
    
    setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}

// –°—Ç–∏–ª–∏ –¥–ª—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π
