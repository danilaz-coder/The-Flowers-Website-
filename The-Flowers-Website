6. api/client.js (–ò–Ω—Ç–µ–≥—Ä–∞—Ü–∏—è —Å –∞—Å—Å–∏—Å—Ç–µ–Ω—Ç–æ–º)

javascript
// API –∫–ª–∏–µ–Ω—Ç –¥–ª—è –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–∏ —Å The Flowers Assistant
class FlowersAPI {
    constructor(baseUrl = 'http://localhost:8000/api') {
        this.baseUrl = baseUrl;
        this.endpoints = {
            bouquets: '/bouquets',
            bouquet: '/bouquets/{id}',
            orders: '/orders',
            order: '/orders/{id}',
            dashboard: '/dashboard',
            assistant: '/assistant/query',
            logistics: '/logistics/active',
            delivery: '/logistics/{id}',
            crm: '/crm/reminders'
        };
    }

    // –û–±—â–∏–π –º–µ—Ç–æ–¥ –∑–∞–ø—Ä–æ—Å–∞
    async request(endpoint, options = {}) {
        const url = ${this.baseUrl}${endpoint};
        const defaultOptions = {
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            }
        };

        try {
            const response = await fetch(url, { ...defaultOptions, ...options });
            
            if (!response.ok) {
                throw new Error(HTTP ${response.status}: ${response.statusText});
            }

return await response.json();
        } catch (error) {
            console.error(API request failed: ${endpoint}, error);
            throw error;
        }
    }

    // –ë—É–∫–µ—Ç—ã
    async getBouquets(filters = {}) {
        const queryParams = new URLSearchParams(filters).toString();
        const endpoint = ${this.endpoints.bouquets}${queryParams ? '?' + queryParams : ''};
        return this.request(endpoint);
    }

    async getBouquet(id) {
        const endpoint = this.endpoints.bouquet.replace('{id}', id);
        return this.request(endpoint);
    }

    // –ó–∞–∫–∞–∑—ã
    async createOrder(orderData) {
        return this.request(this.endpoints.orders, {
            method: 'POST',
            body: JSON.stringify(orderData)
        });
    }

    async getOrder(id) {
        const endpoint = this.endpoints.order.replace('{id}', id);
        return this.request(endpoint);
    }

    async updateOrderStatus(id, status) {
        const endpoint = this.endpoints.order.replace('{id}', id);
        return this.request(endpoint, {
            method: 'PUT',
            body: JSON.stringify({ status })
        });
    }

    // –î–∞—à–±–æ—Ä–¥
    async getDashboard(period = 'today') {
        const endpoint = ${this.endpoints.dashboard}?period=${period};
        return this.request(endpoint);
    }

    // –ê—Å—Å–∏—Å—Ç–µ–Ω—Ç
    async queryAssistant(query) {
        return this.request(this.endpoints.assistant, {
            method: 'POST',
            body: JSON.stringify({ query })
        });
    }

    // –õ–æ–≥–∏—Å—Ç–∏–∫–∞
    async getActiveDeliveries() {
        return this.request(this.endpoints.logistics);
    }

    async updateDelivery(id, data) {
        const endpoint = this.endpoints.delivery.replace('{id}', id);
        return this.request(endpoint, {
            method: 'PUT',
            body: JSON.stringify(data)
        });
    }

    // CRM
    async getUpcomingReminders(days = 7) {
        const endpoint = ${this.endpoints.crm}?days_ahead=${days};
        return this.request(endpoint);
    }

    // –£—Ç–∏–ª–∏—Ç—ã
    calculateDeliveryFee(zone, orderAmount) {
        const thresholds = {
            center: { fee: 5, free: 80 },
            sarafovo: { fee: 8, free: 150 },
            districts: { fee: 8, free: 150 },
            suburbs: { fee: 12, free: 200 }
        };

        const config = thresholds[zone] || thresholds.center;
        return orderAmount >= config.free ? 0 : config.fee;
    }

    formatPrice(amount, currency = '–ª–≤') {
        return ${amount.toFixed(2)} ${currency};
    }

    formatDate(date) {
        return new Date(date).toLocaleDateString('ru-RU', {
            day: 'numeric',
            month: 'long',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
    }
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è API –∫–ª–∏–µ–Ω—Ç–∞
const flowersAPI = new FlowersAPI();

// –≠–∫—Å–ø–æ—Ä—Ç –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ –¥—Ä—É–≥–∏—Ö —Ñ–∞–π–ª–∞—Ö
if (typeof module !== 'undefined' && module.exports) {
    module.exports = { FlowersAPI, flowersAPI };
} else {
    window.flowersAPI = flowersAPI;
}

// –£—Ç–∏–ª–∏—Ç—ã –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å URL –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
const URLUtils = {
    getParam(name) {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(name);
    },

    setParam(name, value) {
        const url = new URL(window.location);
        url.searchParams.set(name, value);
        window.history.pushState({}, '', url);
    },

    getAllParams() {
        const urlParams = new URLSearchParams(window.location.search);
        const params = {};
        for (const [key, value] of urlParams) {
            params[key] = value;
        }
        return params;
    }
};

// –õ–æ–∫–∞–ª—å–Ω–æ–µ —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –¥–ª—è –∫–æ—Ä–∑–∏–Ω—ã
const CartStorage = {
    KEY: 'the_flowers_cart',

    getCart() {
        const cartJson = localStorage.getItem(this.KEY);
        return cartJson ? JSON.parse(cartJson) : [];
    },

addToCart(bouquet) {
        const cart = this.getCart();
        cart.push({
            id: bouquet.id,
            name: bouquet.name_ru,
            price: bouquet.price_bgn,
            image: bouquet.image_url,
            addedAt: new Date().toISOString()
        });
        localStorage.setItem(this.KEY, JSON.stringify(cart));
        this.updateCartCount();
        return cart;
    },

    removeFromCart(bouquetId) {
        let cart = this.getCart();
        cart = cart.filter(item => item.id !== bouquetId);
        localStorage.setItem(this.KEY, JSON.stringify(cart));
        this.updateCartCount();
        return cart;
    },

    clearCart() {
        localStorage.removeItem(this.KEY);
        this.updateCartCount();
    },

    updateCartCount() {
        const cart = this.getCart();
        const count = cart.length;
        
        // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫ –≤ UI –µ—Å–ª–∏ –µ—Å—Ç—å
        const counter = document.getElementById('cart-counter');
        if (counter) {
            counter.textContent = count;
            counter.style.display = count > 0 ? 'inline' : 'none';
        }
    }
};

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–æ—Ä–∑–∏–Ω—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
document.addEventListener('DOMContentLoaded', () => {
    CartStorage.updateCartCount();
});

7. api/order.js (–õ–æ–≥–∏–∫–∞ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞)

javascript
// –õ–æ–≥–∏–∫–∞ –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞
document.addEventListener('DOMContentLoaded', function() {
    initOrderPage();
});

function initOrderPage() {
    // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –∏–∑ URL
    const urlParams = new URLSearchParams(window.location.search);
    const bouquetId = urlParams.get('bouquet');
    const budget = urlParams.get('budget');

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —à–∞–≥–æ–≤
    initOrderSteps();
    
    // –ï—Å–ª–∏ –µ—Å—Ç—å bouquetId, –∑–∞–≥—Ä—É–∂–∞–µ–º –±—É–∫–µ—Ç
    if (bouquetId) {
        loadBouquet(bouquetId);
    }
    
    // –ï—Å–ª–∏ –µ—Å—Ç—å –±—é–¥–∂–µ—Ç, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–ª–∞–π–¥–µ—Ä
    if (budget) {
        document.getElementById('order-budget').value = budget;
        document.getElementById('order-budget-value').textContent = –¥–æ ${budget} –ª–≤;
    }
    
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø–æ–∏—Å–∫–∞ –ø–æ –±—é–¥–∂–µ—Ç—É
    initBudgetSearch();
    
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ–æ—Ä–º—ã –¥–æ—Å—Ç–∞–≤–∫–∏
    initDeliveryForm();
    
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –º–µ—Ç–æ–¥–æ–≤ –æ–ø–ª–∞—Ç—ã
    initPaymentMethods();
    
    // –ö–Ω–æ–ø–∫–∞ –ø–æ–º–æ—â–∏
    const helpBtn = document.getElementById('help-btn');
    const helpModal = document.getElementById('help-modal');
    if (helpBtn && helpModal) {
        helpBtn.addEventListener('click', () => {
            helpModal.classList.remove('hidden');
        });
        helpModal.querySelector('.close-modal').addEventListener('click', () => {
            helpModal.classList.add('hidden');
        });
    }
}

function initOrderSteps() {
    const steps = document.querySelectorAll('.order-step');
    const stepIndicators = document.querySelectorAll('.step');
    const nextButtons = document.querySelectorAll('[id^="next"]');
    const prevButtons = document.querySelectorAll('[id^="prev"]');
    
    let currentStep = 1;
    
    function goToStep(step) {
        // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —à–∞–≥–∏
        steps.forEach(s => s.classList.add('hidden'));
        stepIndicators.forEach(s => s.classList.remove('active'));
        
        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—ã–π —à–∞–≥
        document.getElementById(step-${step}).classList.remove('hidden');
        document.querySelector(.step[data-step="${step}"]).classList.add('active');
        
        currentStep = step;
        
        // –û–±–Ω–æ–≤–ª—è–µ–º URL
        URLUtils.setParam('step', step);
    }
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫ "–î–∞–ª–µ–µ"
    nextButtons.forEach(btn => {
        btn.addEventListener('click', function() {
            const targetStep = currentStep + 1;
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è –ø–µ—Ä–µ–¥ –ø–µ—Ä–µ—Ö–æ–¥–æ–º
            if (currentStep === 1 && !validateStep1()) return;
            if (currentStep === 2 && !validateStep2()) return;


if (currentStep === 3 && !validateStep3()) return;
            
            goToStep(targetStep);
            
            // –ï—Å–ª–∏ –ø–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ —à–∞–≥ –æ–ø–ª–∞—Ç—ã, –æ–±–Ω–æ–≤–ª—è–µ–º —Ä–∞—Å—á–µ—Ç
            if (targetStep === 3) {
                updatePaymentSummary();
            }
        });
    });
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫ "–ù–∞–∑–∞–¥"
    prevButtons.forEach(btn => {
        btn.addEventListener('click', function() {
            goToStep(currentStep - 1);
        });
    });
    
    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–∑ URL
    const urlStep = URLUtils.getParam('step');
    if (urlStep && parseInt(urlStep) <= steps.length) {
        goToStep(parseInt(urlStep));
    } else {
        goToStep(1);
    }
}

async function loadBouquet(bouquetId) {
    try {
        const response = await flowersAPI.getBouquet(bouquetId);
        if (response.success) {
            displaySelectedBouquet(response.data);
        }
    } catch (error) {
        console.error('Error loading bouquet:', error);
        showNotification('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –±—É–∫–µ—Ç–∞', 'error');
    }
}

function displaySelectedBouquet(bouquet) {
    const previewDiv = document.getElementById('selected-bouquet-preview');
    if (!previewDiv) return;
    
    previewDiv.classList.remove('hidden');
    previewDiv.innerHTML = 
        <div class="selected-bouquet">
            <div class="selected-image">
                <img src="${bouquet.image_url || 'images/default-bouquet.jpg'}" 
                     alt="${bouquet.name_ru}">
            </div>
            <div class="selected-info">
                <h3>–í—ã –≤—ã–±—Ä–∞–ª–∏: ${bouquet.name_ru}</h3>
                <div class="selected-price">${flowersAPI.formatPrice(bouquet.price_bgn)}</div>
                <p>${bouquet.description_ru || ''}</p>
                <button class="btn btn-secondary" id="change-bouquet">
                    <i class="fas fa-exchange-alt"></i> –í—ã–±—Ä–∞—Ç—å –¥—Ä—É–≥–æ–π
                </button>
            </div>
        </div>
    ;
    
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π –±—É–∫–µ—Ç –≤ —Å–µ—Å—Å–∏–∏
    sessionStorage.setItem('selectedBouquet', JSON.stringify(bouquet));
    
    // –ö–Ω–æ–ø–∫–∞ —Å–º–µ–Ω—ã –±—É–∫–µ—Ç–∞
    document.getElementById('change-bouquet').addEventListener('click', function() {
        previewDiv.classList.add('hidden');
        sessionStorage.removeItem('selectedBouquet');
        document.getElementById('step-1').classList.remove('hidden');
    });
    
    // –ü–µ—Ä–µ—Ö–æ–¥–∏–º —Å—Ä–∞–∑—É –∫ —à–∞–≥—É 2
    goToStep(2);
}

function initBudgetSearch() {
    const budgetSlider = document.getElementById('order-budget');
    const budgetValue = document.getElementById('order-budget-value');
    const searchBtn = document.getElementById('search-by-budget');
    
    if (!budgetSlider  !budgetValue  !searchBtn) return;
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∑–Ω–∞—á–µ–Ω–∏—è —Å–ª–∞–π–¥–µ—Ä–∞
    budgetSlider.addEventListener('input', function() {
        budgetValue.textContent = –¥–æ ${this.value} –ª–≤;
    });
    
    // –ü–æ–∏—Å–∫
    searchBtn.addEventListener('click', async function() {
        const maxPrice = budgetSlider.value;
        searchBtn.disabled = true;
        searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> –ò—â–µ–º...';
        
        try {
            const response = await flowersAPI.getBouquets({
                max_price: maxPrice,
                available_only: true,
                limit: 6
            });
            
            const resultsDiv = document.getElementById('search-results');
            if (response.success && response.data?.items.length > 0) {
                resultsDiv.innerHTML = response.data.items.map(bouquet => `
                    <div class="bouquet-card">
                        <div class="bouquet-image">
                            <img src="${bouquet.image_url || 'images/default-bouquet.jpg'}" 
                                 alt="${bouquet.name_ru}">


</div>
                        <div class="bouquet-info">
                            <h3>${bouquet.name_ru}</h3>
                            <div class="bouquet-price">${flowersAPI.formatPrice(bouquet.price_bgn)}</div>
                            <p>${bouquet.description_ru?.substring(0, 60) || ''}...</p>
                            <button class="btn btn-primary select-for-order" 
                                    data-id="${bouquet.id}"
                                    style="width: 100%; margin-top: 10px;">
                                <i class="fas fa-check"></i> –í—ã–±—Ä–∞—Ç—å
                            </button>
                        </div>
                    </div>
                ).join('');
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –≤—ã–±–æ—Ä–∞
                document.querySelectorAll('.select-for-order').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const bouquetId = this.dataset.id;
                        loadBouquet(bouquetId);
                    });
                });
            } else {
                resultsDiv.innerHTML = 
                    <div class="no-results">
                        <i class="fas fa-search"></i>
                        <h4>–ë—É–∫–µ—Ç–æ–≤ –¥–æ ${maxPrice} –ª–≤ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ</h4>
                        <p>–ü–æ–ø—Ä–æ–±—É–π—Ç–µ —É–≤–µ–ª–∏—á–∏—Ç—å –±—é–¥–∂–µ—Ç –∏–ª–∏ –∑–∞–≥–ª—è–Ω–∏—Ç–µ –≤ –ø–æ–ª–Ω—É—é –≤–∏—Ç—Ä–∏–Ω—É</p>
                        <a href="showcase.html" class="btn btn-secondary">
                            <i class="fas fa-store"></i> –ü–µ—Ä–µ–π—Ç–∏ –≤ –≤–∏—Ç—Ä–∏–Ω—É
                        </a>
                    </div>
                `;
            }
        } catch (error) {
            console.error('Search error:', error);
            showNotification('–û—à–∏–±–∫–∞ –ø–æ–∏—Å–∫–∞', 'error');
        } finally {
            searchBtn.disabled = false;
            searchBtn.innerHTML = '<i class="fas fa-search"></i> –ù–∞–π—Ç–∏ –±—É–∫–µ—Ç—ã';
        }
    });
}

function initDeliveryForm() {
    const form = document.getElementById('delivery-form');
    const zoneSelect = document.getElementById('delivery-zone');
    
    if (!form || !zoneSelect) return;
    
    // –†–∞—Å—á–µ—Ç —Å—Ç–æ–∏–º–æ—Å—Ç–∏ –ø—Ä–∏ –∏–∑–º–µ–Ω–µ–Ω–∏–∏ –∑–æ–Ω—ã
    zoneSelect.addEventListener('change', updateDeliveryFee);
    
    // –ü—Ä–µ–¥–∑–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –∏–∑ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
    const savedData = JSON.parse(sessionStorage.getItem('deliveryData') || '{}');
    Object.keys(savedData).forEach(key => {
        const input = document.getElementById(key);
        if (input) input.value = savedData[key];
    });
    
    // –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ñ–æ—Ä–º—ã
    form.addEventListener('input', function() {
        const formData = new FormData(form);
        const data = {};
        formData.forEach((value, key) => {
            data[key] = value;
        });
        sessionStorage.setItem('deliveryData', JSON.stringify(data));
    });
    
    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–æ—Ä–º—ã
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        if (!validateStep2()) return;
        
        // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –∫ —à–∞–≥—É –æ–ø–ª–∞—Ç—ã
        goToStep(3);
    });
}

function updateDeliveryFee() {
    const zoneSelect = document.getElementById('delivery-zone');
    const bouquet = JSON.parse(sessionStorage.getItem('selectedBouquet') || '{}');
    
    if (!zoneSelect.value || !bouquet.price_bgn) return;
    
    const zone = zoneSelect.value;
    const bouquetPrice = bouquet.price_bgn;
    const deliveryFee = flowersAPI.calculateDeliveryFee(zone, bouquetPrice);
    const total = bouquetPrice + deliveryFee;
    
    document.getElementById('bouquet-price').textContent = flowersAPI.formatPrice(bouquetPrice);
    document.getElementById('delivery-fee').textContent = flowersAPI.formatPrice(deliveryFee);
    document.getElementById('total-price').textContent = flowersAPI.formatPrice(total);
    
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ —Å–µ—Å—Å–∏–∏
    sessionStorage.setItem('orderTotal', total.toString());
    sessionStorage.setItem('deliveryFee', deliveryFee.toString());
}


function validateStep1() {
    const selectedBouquet = sessionStorage.getItem('selectedBouquet');
    if (!selectedBouquet) {
        showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ –±—É–∫–µ—Ç', 'error');
        return false;
    }
    return true;
}

function validateStep2() {
    const requiredFields = ['customer-name', 'customer-phone', 'delivery-address', 'delivery-zone'];
    let isValid = true;
    
    requiredFields.forEach(fieldId => {
        const field = document.getElementById(fieldId);
        if (!field.value.trim()) {
            field.classList.add('error');
            isValid = false;
        } else {
            field.classList.remove('error');
        }
    });
    
    if (!isValid) {
        showNotification('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è', 'error');
    }
    
    return isValid;
}

function initPaymentMethods() {
    const methods = document.querySelectorAll('.payment-method');
    const placeOrderBtn = document.getElementById('place-order');
    
    if (!methods.length || !placeOrderBtn) return;
    
    methods.forEach(method => {
        method.addEventListener('click', function() {
            // –£–±–∏—Ä–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —É –≤—Å–µ—Ö
            methods.forEach(m => m.classList.remove('active'));
            // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –≤—ã–±—Ä–∞–Ω–Ω–æ–º—É
            this.classList.add('active');
            
            const paymentMethod = this.dataset.method;
            showPaymentForm(paymentMethod);
        });
    });
    
    // –ü–æ —É–º–æ–ª—á–∞–Ω–∏—é –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Ñ–æ—Ä–º—É –¥–ª—è –∫–∞—Ä—Ç
    showPaymentForm('card');
    
    // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—è –∑–∞–∫–∞–∑–∞
    placeOrderBtn.addEventListener('click', async function() {
        if (!validateStep3()) return;
        
        placeOrderBtn.disabled = true;
        placeOrderBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> –û—Ñ–æ—Ä–º–ª—è–µ–º...';
        
        try {
            await processOrder();
        } catch (error) {
            console.error('Order processing error:', error);
            showNotification('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏–∏ –∑–∞–∫–∞–∑–∞', 'error');
        } finally {
            placeOrderBtn.disabled = false;
            placeOrderBtn.innerHTML = '<i class="fas fa-lock"></i> –û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑';
        }
    });
}

