3. script.js (–û—Å–Ω–æ–≤–Ω–æ–π JavaScript)

javascript
// –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è API
const API_CONFIG = {
    baseUrl: 'http://localhost:8000/api', // –ó–∞–º–µ–Ω–∏—Ç—å –Ω–∞ —Ä–µ–∞–ª—å–Ω—ã–π URL
    endpoints: {
        bouquets: '/bouquets',
        orders: '/orders',
        dashboard: '/dashboard',
        assistant: '/assistant/query',
        logistics: '/logistics/active'
    }
};

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
document.addEventListener('DOMContentLoaded', function() {
    initLanguageSwitcher();
    initAssistantWidget();
    loadBouquetsPreview();
    initOrderForm();
    initDashboard();
    smoothScroll();
});

// –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —è–∑—ã–∫–∞
function initLanguageSwitcher() {
    const select = document.getElementById('language-select');
    if (select) {
        select.addEventListener('change', function() {
            const lang = this.value;
            document.documentElement.lang = lang;
            updateContentLanguage(lang);
        });
    }
}

function updateContentLanguage(lang) {
    // –ó–¥–µ—Å—å –±—É–¥–µ—Ç –ª–æ–≥–∏–∫–∞ –ø–µ—Ä–µ–≤–æ–¥–∞ –∫–æ–Ω—Ç–µ–Ω—Ç–∞
    console.log(Language switched to: ${lang});
}

// –í–∏–¥–∂–µ—Ç –∞—Å—Å–∏—Å—Ç–µ–Ω—Ç–∞
function initAssistantWidget() {
    const assistantBtn = document.getElementById('assistant-btn');
    const widget = document.getElementById('assistant-widget');
    const closeBtn = widget.querySelector('.close-widget');
    const sendBtn = document.getElementById('send-message');
    const chatInput = document.getElementById('chat-input');
    const quickBtns = document.querySelectorAll('.quick-btn');
    
    // –û—Ç–∫—Ä—ã—Ç–∏–µ/–∑–∞–∫—Ä—ã—Ç–∏–µ –≤–∏–¥–∂–µ—Ç–∞
    assistantBtn.addEventListener('click', () => {
        widget.classList.remove('hidden');
        chatInput.focus();
    });
    
    closeBtn.addEventListener('click', () => {
        widget.classList.add('hidden');
    });
    
    // –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
    function sendMessage() {
        const message = chatInput.value.trim();
        if (!message) return;
        
        // –î–æ–±–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        addMessage(message, 'user');
        chatInput.value = '';
        
        // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å –∞—Å—Å–∏—Å—Ç–µ–Ω—Ç—É
        queryAssistant(message);
    }
    
    sendBtn.addEventListener('click', sendMessage);
    chatInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') sendMessage();
    });
    
    // –ë—ã—Å—Ç—Ä—ã–µ –¥–µ–π—Å—Ç–≤–∏—è
    quickBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const query = btn.dataset.query;
            chatInput.value = query;
            sendMessage();
        });
    });
}

function addMessage(text, sender) {
    const messages = document.getElementById('chat-messages');
    const messageDiv = document.createElement('div');
    messageDiv.className = message ${sender};
    messageDiv.innerHTML = <p>${text}</p>;
    messages.appendChild(messageDiv);
    messages.scrollTop = messages.scrollHeight;
}

async function queryAssistant(query) {
    try {
        const response = await fetch(${API_CONFIG.baseUrl}${API_CONFIG.endpoints.assistant}, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ query: query })
        });
        
        const data = await response.json();

Daniel üåç Kanay üåêQA, [03/02/2026 18:10]
if (data.success) {
            let responseText = data.data?.message || '–í–æ—Ç —á—Ç–æ —è –Ω–∞—à–µ–ª:';
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ä–∞–∑–Ω—ã—Ö —Ç–∏–ø–æ–≤ –æ—Ç–≤–µ—Ç–æ–≤
            if (data.data?.type === 'showcase' && data.data.bouquets) {
                responseText += '\n\n' + data.data.bouquets.map(b => 
                    ‚Ä¢ ${b.name_ru} - ${b.price_bgn} –ª–≤
                ).join('\n');
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –∫ –∑–∞–∫–∞–∑—É
                setTimeout(() => {
                    addQuickActionButton('–ó–∞–∫–∞–∑–∞—Ç—å –æ–¥–∏–Ω –∏–∑ —ç—Ç–∏—Ö –±—É–∫–µ—Ç–æ–≤', 'order');
                }, 500);
            }
            
            addMessage(responseText, 'assistant');
        } else {
            addMessage('–ò–∑–≤–∏–Ω–∏—Ç–µ, –ø—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —Å—Ñ–æ—Ä–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –∏–Ω–∞—á–µ.', 'assistant');
        }
    } catch (error) {
        console.error('Assistant query error:', error);
        addMessage('–°–µ—Ä–≤–∏—Å –≤—Ä–µ–º–µ–Ω–Ω–æ –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ.', 'assistant');
    }
}

function addQuickActionButton(text, action) {
    const quickActions = document.querySelector('.quick-actions');
    const btn = document.createElement('button');
    btn.className = 'quick-btn';
    btn.textContent = text;
    btn.dataset.action = action;
    
    btn.addEventListener('click', () => {
        if (action === 'order') {
            window.location.href = '#order';
            document.getElementById('assistant-widget').classList.add('hidden');
        }
    });
    
    quickActions.appendChild(btn);
}

// –ó–∞–≥—Ä—É–∑–∫–∞ –±—É–∫–µ—Ç–æ–≤ –¥–ª—è –ø—Ä–µ–≤—å—é
async function loadBouquetsPreview() {
    const container = document.getElementById('bouquets-preview');
    if (!container) return;
    
    try {
        const response = await fetch(${API_CONFIG.baseUrl}${API_CONFIG.endpoints.bouquets}?limit=4);
        const data = await response.json();
        
        if (data.success && data.data?.items) {
            container.innerHTML = data.data.items.map(bouquet => 
                <div class="bouquet-card">
                    <div class="bouquet-image">
                        <img src="${bouquet.image_url || 'images/default-bouquet.jpg'}" 
                             alt="${bouquet.name_ru}">
                    </div>
                    <div class="bouquet-info">
                        <h3>${bouquet.name_ru}</h3>
                        <div class="bouquet-price">${bouquet.price_bgn} –ª–≤</div>
                        <p>${bouquet.description_ru?.substring(0, 80)}...</p>
                        <div class="bouquet-tags">
                            ${bouquet.category ? <span class="tag">${bouquet.category}</span> : ''}
                            <span class="tag">–í –Ω–∞–ª–∏—á–∏–∏</span>
                        </div>
                        <button class="btn btn-primary order-btn" 
                                data-id="${bouquet.id}"
                                style="margin-top: 10px; width: 100%;">
                            <i class="fas fa-shopping-cart"></i> –ó–∞–∫–∞–∑–∞—Ç—å
                        </button>
                    </div>
                </div>
            ).join('');
            
            // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫ –∑–∞–∫–∞–∑–∞
            document.querySelectorAll('.order-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const bouquetId = this.dataset.id;
                    window.location.href = order.html?bouquet=${bouquetId};
                });
            });
        }
    } catch (error) {
        container.innerHTML = '<div class="loading">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –±—É–∫–µ—Ç–æ–≤</div>';
    }
}

